<Window
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="418 FamillyBrowser"
  Height="750" Width="750" 
  MinHeight="500" MinWidth="500"
  MaxHeight="1000" MaxWidth="1000"
  xmlns:UserControl = "clr-namespace:UserControl.FolderExplorer"
  Background="White"
  >

  <Grid Margin="10">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="30*"/>
      <ColumnDefinition Width="70*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="100"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="50"/>
    </Grid.RowDefinitions>


    <!-- Logo and Title -->
    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" >
      <Image x:Name="logo" Source="Logo.png" Height="60" Width="60"/>
      <TextBlock Text="FamilyBrowser" FontSize="18" FontWeight="Bold" />
    </StackPanel>
    
    <!-- Search -->
    <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,25,30,25" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" >
      <TextBox x:Name="search" Width="250" Height="30" />
      <Button x:Name="searchButton" Content="🔍" Width="40" Height="30" />
    </StackPanel>

    <!-- List -->
    <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" x:Name="FolderExplorer" Margin="10">
      <Separator Grid.Row="1" Grid.Column="0" Margin="10,0,10,20"/>
      <ItemsControl
        ItemsSource="{DynamicResource FolderItem}">

      </ItemsControl>

      <StackPanel Orientation="Vertical">
        <TextBlock Text="Placeholder" FontSize="18" Margin="10,1,0,3" Foreground="OrangeRed" />
        <TextBlock Text="Placeholder" FontSize="18" Margin="10,1,0,3" Foreground="OrangeRed" />
        <TextBlock Text="Placeholder" FontSize="18" Margin="10,1,0,3" Foreground="OrangeRed" />
        <TextBlock Text="Placeholder" FontSize="18" Margin="10,1,0,3" Foreground="OrangeRed" />
        <TextBlock Text="Placeholder" FontSize="18" Margin="10,1,0,3" Foreground="OrangeRed" />
        <TextBlock Text="Placeholder" FontSize="18" Margin="25,1,0,0" Foreground="OrangeRed" />
        <TextBlock Text="Placeholder" FontSize="18" Margin="25,1,0,0" Foreground="OrangeRed" />
        <TextBlock Text="Placeholder" FontSize="18" Margin="25,1,0,0" Foreground="OrangeRed" />
        <TextBlock Text="Placeholder" FontSize="18" Margin="25,1,0,0" Foreground="OrangeRed" />
        <TextBlock Text="Placeholder" FontSize="18" Margin="25,1,0,0" Foreground="OrangeRed" />
        <TextBlock Text="Placeholder" FontSize="18" Margin="10,1,0,3" Foreground="OrangeRed" />
        <TextBlock Text="Placeholder" FontSize="18" Margin="10,1,0,3" Foreground="OrangeRed" />
        <TextBlock Text="Placeholder" FontSize="18" Margin="25,1,0,0" Foreground="OrangeRed" />
      </StackPanel>
    
    </StackPanel>

    <!-- Details -->
    <Grid Grid.Row="1" Grid.Column="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>

    </Grid>
  

    <!-- validation -->
    <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" >
      <Button Content="Cancel" Width="100" Height="30" Margin="10"  Click="abort"/>
      <Button Content="OK" Width="100" Height="30" Margin="10"  Click="abort"/>
    </StackPanel>

  </Grid>
</Window>

